<section class="sign-container">
  <div class="tiny-container">
    <h2>Se connecter</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => "sign-container") do |f| %>
      <%= devise_error_messages! %>

      <div class="field field-text">
        <%= f.email_field :email, autofocus: true, placeholder: "E-Mail" %>
      </div>

      <div class="field field-text">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Mot de passe" %>
        <%= render "devise/shared/links" %>
      </div>

      <!-- <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%> -->

      <div class="actions">
        <%= f.submit "Valider", :class => "submit-connect" %>
      </div>
    <% end %>
  </div>
</section>
